on boot
    # Fix permissions of double tap node
    chown system system /proc/touchpamel/double_tap_enable
    chmod 0644 /proc/touchpamel/double_tap_enable

    # Enable OTG by default
    write /sys/class/power_supply/usb/otg_switch 1

    # Fix for AOD
    write /sys/kernel/oppo_display/aod_area "290 414 699 1270 0 1 0 255"
